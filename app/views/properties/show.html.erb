<p id="notice"><%= notice %></p>

<h1>閲覧</h1>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.price %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remark %>
</p>

<hr size="1">

<% n = 0 %>
  <% if @property.stations.any? %>
<% @property.stations.each do |station| %>
  <h2>最寄り駅<%= n += 1 %></h2>
  <p>路線名 <%= station.route_name %>線</p>
  <p>駅名 <%= station.station_name %>駅</p>
  <p>徒歩分数 <%= station.distance %>分</p>
  <% end %>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
<%= link_to '戻る', properties_path %>
